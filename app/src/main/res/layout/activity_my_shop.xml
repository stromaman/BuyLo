<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MyShopActivity">

    <LinearLayout
        android:id="@+id/dashMainLayout"
        android:layout_above="@+id/bottomCartLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="#CDC8C8"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Shop"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subscribe"
                        android:gravity="center|end"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="40dp"
                            android:text=" No of Views:"
                            android:textSize="14dp"
                            android:textStyle="normal"
                            android:textColor="@color/black">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="100"
                            android:layout_marginTop="40dp"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:textColor="@color/black">
                        </TextView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="40dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Shop Id:-"
                                android:textSize="14dp"
                                android:textStyle="normal"
                                android:textColor="@color/black">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1134FSJFN"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:textColor="@color/black">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rubyColor"
                        android:layout_marginTop="2dp">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Item"
                                android:layout_marginStart="3dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@color/black">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/rubyColor"
                            android:layout_marginTop="2dp">
                        </View>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Active"
                                android:layout_marginStart="3dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@color/black">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/rubyColor"
                            android:layout_marginTop="2dp">
                        </View>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Draft"
                                android:layout_marginStart="3dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@color/black">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rubyColor"
                        android:layout_marginTop="2dp">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/categoryRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:spanCount="2"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

<!--                    <LinearLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:orientation="vertical">-->

<!--                        <LinearLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="100dp"-->
<!--                            android:layout_marginTop="100dp"-->
<!--                            android:gravity="center"-->
<!--                            android:orientation="horizontal">-->

<!--                            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                                android:id="@+id/userImage"-->
<!--                                android:layout_width="70dp"-->
<!--                                android:layout_height="70dp"-->
<!--                                android:src="@drawable/noprofile"-->
<!--                                app:civ_border_color="@color/white"-->
<!--                                app:civ_border_width="5dp" />-->

<!--                        </LinearLayout>-->
<!--                    </LinearLayout>-->


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottomCartLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_cart_layout"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/rubyColor">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Shop"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>



        <LinearLayout

            android:id="@+id/viewCartLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Menu"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp">
            </TextView>


        </LinearLayout>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/dashProgress"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:theme="@style/colSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>